{
    "$schema": "http://json-schema.org/schema",
    "id": "HelloSchema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the person we want to greet",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "url": {
            "type": "string",
            "x-prompt": "What is the resource url (eg: /api/resource)"
        },
         "findOne": {
            "type": "boolean",
            "default": false
        }
    },
    "required": [
        "name"
    ]
}